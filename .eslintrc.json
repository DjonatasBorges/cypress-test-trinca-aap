{
  "plugins": [
    "cypress"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google",
    "plugin:cypress/recommended"
  ],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [
        ".eslintrc.{js,cjs}"
      ],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "never"
    ],
    "max-len": ["error", { "code": 120 }],
    "no-trailing-spaces": [
        "error"
    ]
  }
}
